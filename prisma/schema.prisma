generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime          @updatedAt @map("updated_at")
  TaxDeclarations TaxDeclarations[]
  Token           Token?

  @@map("Users")
}

model TaxDeclarations {
  id              Int      @id @default(autoincrement())
  year            Int
  totalIncome     Float    @map("total_income") // rendimento_total_anual
  DeductionsTotal Float    @map("total_deduction") // deducoes_total_dependentes
  submissionDate  DateTime @map("submission_date") // data_envio
  totalTax        Float    @map("total_tax") // total_de_taxa_anual
  monthlyTax      Float    @map(" monthly_tax") // total_de_taxa_mensal

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  users  User   @relation(fields: [userId], references: [id])
  userId String

  @@map("tax_declarations")
}

model Token {
  id String @id @default(uuid())

  User User @relation(fields: [userId], references: [id])

  createdAt DateTime @map("created_at")
  expiresAt DateTime @map("expires_at")
  userId    String   @unique
}
