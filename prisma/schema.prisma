generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime          @updatedAt @map("updated_at")
  TaxDeclarations TaxDeclarations[]

  @@map("Users")
}

model TaxDeclarations {
  id              Int      @id @default(autoincrement())
  year            DateTime
  totalIncome     Float // rendimento_total
  totalDeductions Float // deducoes_totais
  taxDue          Float // imposto_devido
  submissionDate  DateTime // data_envio

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  users  User   @relation(fields: [userId], references: [id])
  userId String

  @@map("Tax_declarations")
}
